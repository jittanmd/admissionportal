<%- include('./header.ejs') %>
    <!-- slide start -->
    <div class="carousel slide" data-bs-ride="carousel" id="an">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#an" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#an" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#an" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#an" data-bs-slide-to="3"></button>
            <button type="button" data-bs-target="#an" data-bs-slide-to="4"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://mits-admission-portal.onrender.com/assets/images/banner1.jpg" alt="" class="w-100">
            </div>
            <div class="carousel-item">
                <img src="https://mits-admission-portal.onrender.com/assets/images/banner6.jpg" alt="" class="w-100">
            </div>
            <div class="carousel-item">
                <img src="https://mits-admission-portal.onrender.com/assets/images/banner3.jpg" alt="" class="w-100">
            </div>
            <div class="carousel-item">
                <img src="https://mits-admission-portal.onrender.com/assets/images/banner4.jpg" alt="" class="w-100">
            </div>
            <div class="carousel-item">
                <img src="https://mits-admission-portal.onrender.com/assets/images/banner5.jpg" alt="" class="w-100">
            </div>
        </div>
        <button type="button" class="carousel-control-prev" data-bs-target="#an" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button type="button" class="carousel-control-next" data-bs-target="#an" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
    <!-- slider end -->
    <!-- register start -->
    <div class="container mt-5 mb-5">
        <div class="row text-center">
            <h1 class="text-center fw-bold">REGISTER YOUR COURSE</h1>
            <p class="text-center fs-4">Course Registration means the official recording of a student's name to study a
                course or courses.</p>
            <div class="col-md-4">
                <div class="card card1 m-4">
                    <img src="https://mits-admission-portal.onrender.com/assets/images/card_image1.jpg" alt=""
                        class="card-img-top" height="200px" width="350px">
                    <div class="card-body text-center">
                        <h5>B.Tech</h5>
                        <p>B.Tech is a professional undergraduate engineering degree</p>
                        <% if(b){ %>
                        <a herf="/course/display" class="btn btn-info">Display</a>
                       <% }else{ %>
                   
                        <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#btech">Register</button>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card2 m-4">
                    <img src="https://mits-admission-portal.onrender.com/assets/images/card_image2.jpg" alt=""
                        class="card-img-top" height="200px" width="350px">
                    <div class="card-body text-center">
                        <h5>BCA</h5>
                        <p>BCA is a three-year Bachelor's Degree in Computer Application</p>
                        <% if(bca){ %>
                            <a herf="/course/display" class="btn btn-info">Display</a>
                           <% }else{ %>
                       
                            <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#bca">Register</button>
                            <% } %>
                       
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card m-4 card3">
                    <img src="https://mits-admission-portal.onrender.com/assets/images/card_image3.jpg" alt=""
                        class="card-img-top" height="200px" width="350px">
                    <div class="card-body text-center">
                        <h5>MCA</h5>
                        <p>MCA is a professional post-graduation degree in computer science</p>
                        <% if(mca){ %>
                            <a herf="/course/display" class="btn btn-info">Display</a>
                           <% }else{ %>
                       
                            <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#mca">Register</button>
                            <% } %>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- register end -->
    <!--btech modal-->
    <!-- Button trigger modal -->
    

    <!--btech Modal -->
   <!-- Modal -->
 <div class="modal fade" id="btech" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">b.tech</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
         <form action="/courseinsert" method="post">
          <div class="mb-3">
             <label>Name:</label>
             <input type="text" class="form-control" name="name" placeholder="name">
          </div>
          <div class="mb-3">
             <label>Email:</label>
             <input type="email" class="form-control" name="email" placeholder="email:">
          </div>
          <div class="mb-3">
             <label>Mobile No:</label>
             <input type="number" class="form-control" name="mobile" placeholder="mobilenumber:">
          </div>
          <div class="mb-3">
             <label>D.O.B.:</label>
             <input type="date" class="form-control" name="dob">
          </div>
          <div class="mb-3">
             <label class="mb-2" >Gender:</label><br>
             <input type="radio" name="gender" value="male">male &nbsp;
             <input type="radio" name="gender" value="female">female &nbsp;
          </div>
          <div class="mb-3">
             <label>Address:</label>
            <textarea name="address" class="form-control"></textarea>
          </div>
          <div class="mb-3">
             <label>Select College:</label>
             <select name="college" class="form-control">
                <option>Select</option>
                <option>MITS</option>
                <option>RJIT</option>
                <option>ITM</option>
                <option>NITM</option>
             </select>
          </div>
          <div class="mb-3">
             <label>Select Course:</label>
             <select name="course" class="form-control">
                <option>Select</option>
                <option>B.Tech</option>
             </select>
          </div>
          <div class="mb-3">
             <label>Select Branch:</label>
             <select name="branch" class="form-control">
                <option>Select</option>
                <option>CSE</option>
                <option>IT</option>
                <option>EC</option>
                <option>ET</option>
                <option>ME</option>
                <option>EE</option>
             </select>
          </div>
          <div class="mb-3 text-center">
             <button type="submit" class="btn btn-info">Submit</button>
          </div>
         </form>
        </div>
       
      </div>
    </div>
  </div>
  <!-- btach modal end -->
    
